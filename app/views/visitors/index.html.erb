<!-- Page Content -->
<div class="container">

    <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

            <h1 class="page-header">
                Recent posts
                <small>Top 3 posts</small>
            </h1>

            <!-- Recent Blog Posts -->
            <% @posts.each do |post| %>
                <h2>
                    <%= link_to post.title, post_path(post) %>
                </h2>
                 <p class="lead">
                    by <%= link_to 'Midi Kang', root_path %>
                </p>
                <p><span class="glyphicon glyphicon-time"></span> Posted on <%= post.created_at.strftime('%b %d, %Y') %> | Read:<%= post.visit_count%> </p>

                <hr><!--
                <img class="img-responsive" src="http://placehold.it/900x300" alt="">
                -->
                <hr>

                <p>
                    <%= truncate(simple_format(post.content), length: 100, omission: '... (continued)')%>
                    <%#= raw(markdown_parser(simple_format(post.content))) %>
                </p>
                <%= link_to ('Read More <span class="glyphicon glyphicon-chevron-right"></span>').html_safe, post_path(post), :class => "btn btn-primary" %>

                <hr>
            <% end %>

            <!-- Pager -->
            <ul class="pager">
                <li class="previous">
                    <a href="#">&larr; Older</a>
                </li>
                <li class="next">
                    <a href="#">Newer &rarr;</a>
                </li>
            </ul>

        </div>

        <!-- Blog Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Blog Search Well -->
            <div class="well">
                <h4>My Blog Search</h4>
                <div class="input-group">
                      <%= form_tag('/posts/search', method: :get) do %>
                        <div>
                          <%= text_field_tag :keyword, params[:keyword]%>
                          <%= submit_tag "Search" %>
                        </div>
                      <% end %>
                </div>
                <!-- /.input-group -->
            </div>

            <!-- Blog Categories Well -->
            <div class="well">
                <h4>Blog Categories</h4>
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            <% @categories.each do |category| %>
                                <li><%= link_to category.name, category_path(category) %></li>
                            <% end %>
                        </ul>
                    </div>
                    <!-- /.col-lg-6 -->
                </div>
                <!-- /.row -->
            </div>

            <!-- Side Widget Well -->
            <div class="well">
                <h4>References</h4>
                <ul>
                    <%= render 'references' %>
                </ul>
            </div>
            <div class="well">
                <h4>Side Widget Well</h4>
                <p>Hello Rails!</p>
            </div>

            <!-- Blog Search Well -->
            <div class="well">
                <h4>Blog Search(Original)</h4>
                <div class="input-group">
                    <input type="text" class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <span class="glyphicon glyphicon-search"></span>
                    </button>
                    </span>
                </div>
                <!-- /.input-group -->
            </div>
        </div>

    </div>
    <!-- /.row -->

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Midi Kang 2016</p>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </footer>

</div>
<!-- /.container -->
